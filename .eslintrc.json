{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", { "semi": true }]
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx", ".*ts", "*.tsx"],
      "rules": {}
    }
  ],
  "plugins": ["@typescript-eslint", "prettier"]
}
